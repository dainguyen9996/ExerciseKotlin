<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/space_larger"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginEnd="@dimen/default_margin"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMenu"
        app:layout_constraintTop_toTopOf="@+id/imgMenu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/space_large"
            android:hint="@string/search"
            android:padding="@dimen/space_larger" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/deptA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/deptA"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/imgMenu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDeptA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/deptA"
        tools:itemCount="4"
        tools:listitem="@layout/item_staff" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDeptATextChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/default_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/deptA"
        tools:itemCount="4"
        tools:listitem="@layout/item_staff" />

    <TextView
        android:id="@+id/deptB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/deptB"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/rcvDeptA" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDeptB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/deptB"
        tools:itemCount="4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDeptBChange"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/deptB"
        tools:itemCount="4" />

    <LinearLayout
        android:id="@+id/subLayout"
        android:layout_width="@dimen/width_sub"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/closeMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/small_margin"
            android:rotation="90"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:textSize="@dimen/big_text"
            android:textStyle="bold"
            tools:text="Lo vÄƒn A" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            tools:text="Admin" />

        <TextView
            android:id="@+id/depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            tools:text="IT" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            tools:text="112 an duy" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            tools:text="email" />

        <TextView
            android:id="@+id/btCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/bg_text_button"
            android:padding="@dimen/default_margin"
            android:text="@string/create"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/showRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/bg_text_button"
            android:padding="@dimen/default_margin"
            android:text="@string/view_all"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/bg_text_button"
            android:padding="@dimen/default_margin"
            android:text="@string/change_profile"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/btLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/bg_text_button"
            android:padding="@dimen/default_margin"
            android:text="@string/sign_off"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>