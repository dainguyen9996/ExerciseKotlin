<?xml version="1.0" encoding="utf-8"?>
<resources>
    //Edittext

    <style name="EditBox">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="EditBox.BlueBorder" parent="EditBox">
        <item name="android:background">@drawable/background_edit_box_blue_border</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <dimen name="normal_text_size">14sp</dimen>
    <dimen name="space_normal">6dp</dimen>

    <style name="Button.MaterialPrimary" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">#6D76FF</item>
        <item name="android:background">@drawable/background_edit_box_blue_border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/space_normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
</resources>